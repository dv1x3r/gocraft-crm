{
  "scripts": {
    "build": "bun build:js && bun build:css",
    "watch": "concurrently bun:watch:*",
    "build:js": "bun build ./web/js/client.js ./web/js/admin.js --outdir ./tmp/public/js --minify",
    "watch:js": "bun build ./web/js/client.js ./web/js/admin.js --outdir ./tmp/public/js --watch",
    "build:css": "postcss ./web/scss/main.scss -o ./tmp/public/css/main.css",
    "watch:css": "postcss ./web/scss/main.scss -o ./tmp/public/css/main.css --watch",
    "build:migrate": "go build -o ./tmp/migrate ./cmd/migrate/main.go",
    "build:server": "templ generate && go build -o ./tmp/migrate ./cmd/server/main.go",
    "watch:server": "air",
    "test": "go test -v ./...",
    "db:up": "./tmp/migrate up",
    "db:up-to": "./tmp/migrate up-to",
    "db:up-by-one": "./tmp/migrate up-by-one",
    "db:down": "./tmp/migrate down",
    "db:down-to": "./tmp/migrate down-to",
    "db:status": "./tmp/migrate status",
    "db:reset": "./tmp/migrate reset",
    "db:create": "./tmp/migrate create"
  },
  "devDependencies": {
    "@alpinejs/collapse": "^3.14.1",
    "@csstools/postcss-sass": "^5.1.1",
    "@fontsource-variable/inter": "^5.0.20",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "alpinejs": "^3.14.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.4",
    "htmx.org": "^2.0.1",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.9",
    "w2ui": "github:vitmalina/w2ui#bac775"
  }
}